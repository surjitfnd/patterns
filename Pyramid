
                #include <stdio.h>

int main() {
    int i,j,n,k,temp;
    printf("Enter a value\n");
    scanf("%d",&n);
    temp=n;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=temp-1;j++)
        {
            printf(" ");
        }
        for(k=1;k<=i;k++)
        {
            printf("*");
            //printf(" "); for full pyramid
        }
    printf("\n");
    temp--;
    }
    
    return 0;
}
